<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
<link rel="stylesheet" href="/css/account.css">
<link rel="stylesheet" href="/css/view-component/style.css">

<body>
    <div class="main-content">
        <!-- Top navbar -->
        <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
            <div class="container-fluid">
                <!-- Brand -->
                <a style="margin-bottom: 0;" class="h4 text-white text-uppercase d-none d-lg-inline-block" href="/app/followed/users">Go back</a>
                <!-- Form -->
                <form class="navbar-search navbar-search-dark form-inline mr-3 d-none d-md-flex ml-lg-auto">
                    <div class="form-group" style="margin-bottom: 0;">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                            </div>
                            <input class="form-control" placeholder="Search" type="text">
                        </div>
                    </div>
                </form>
                
            </div>
        </nav>
        <!-- Header -->
        <div class="header pb-8 pt-5 pt-lg-8 d-flex align-items-center"
            style="background-image: url(https://raw.githack.com/creativetimofficial/argon-dashboard/master/assets/img/theme/profile-cover.jpg); background-size: cover; background-position: center top;">
            <!-- Mask -->
            <span class="mask opacity-8"></span>
            <!-- Header container -->
            <div class="container-fluid d-flex align-items-center">
    
            </div>
        </div>
        <!-- Page content -->
        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                    <div class="card card-profile shadow">
                        <div class="row justify-content-center">
                            <div class="col-lg-3 order-lg-2">
                                <div class="card-profile-image">
                                    <a>
                                        <img id="avatar" src="" class="rounded-circle" onerror='this.src="/img/icon/avatar-default.png"'>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                            <div class="d-flex justify-content-between">
                                <a href="/app/user/follow" class="btn btn-sm btn-info mr-4">Follow</a>
                            </div>
                        </div>
                        <div class="card-body pt-0 pt-md-4">
                            <div class="row">
                                <div class="col">
                                    <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                                        <div>
                                            <span id="self-event" class="heading">0</span>
                                            <span class="description">Events</span>
                                        </div>
                                        <div>
                                            <span id="self-follow" class="heading">0</span>
                                            <span class="description">Event Followed</span>
                                        </div>
                                        <div>
                                            <span id="self-following" class="heading">0</span>
                                            <span class="description">User Following</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <h3 id="acc-name">Jessica Jones </h3>
                                <div id="acc-location" class="h5 font-weight-300">
                                    <i class="ni location_pin mr-2"></i>Bucharest, Romania
                                </div>
                                <div id="acc-job" class="h5 mt-4">
                                    <i class="ni business_briefcase-24 mr-2"></i>Solution Manager - Creative Tim Officer
                                </div>
                                <div id="acc-company">
                                    <i class="ni education_hat mr-2"></i>University of Computer Science
                                </div>
                                <hr class="my-4">
                                <p id="acc-description">Ryan — the name taken by Melbourne-raised, Brooklyn-based Nick Murphy — writes,
                                    performs and records all of his own music.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8 order-xl-1">
                    <div class="card bg-secondary shadow">
                        <div class="card-body">
                            <form action="/account/update" method="POST" enctype="multipart/form-data">
                                <h4 class="heading-small text-muted mb-4">User information</h4>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="self-name">Full name</label>
                                                <input name="name" type="text" id="self-name"
                                                    class="form-control form-control-alternative"
                                                    value="" disabled>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="self-email">Email
                                                    address</label>
                                                <input type="email" id="self-email"
                                                    class="form-control form-control-alternative"
                                                    value="" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="self-job">Job</label>
                                                <input name="job" type="text" id="self-job"
                                                    class="form-control form-control-alternative"
                                                    value="" disabled>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="self-company">Company</label>
                                                <input name="company" type="text" id="self-company"
                                                    class="form-control form-control-alternative"
                                                    value="" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="self-city">City</label>
                                                <input name="city" type="text" id="self-city"
                                                    class="form-control form-control-alternative"
                                                    value="" disabled>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="self-country">Country</label>
                                                <input name="country" type="text" id="self-country"
                                                    class="form-control form-control-alternative"
                                                    value="" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="self-description">About him</label>
                                                <input name="description" type="text" id="self-description"
                                                    class="form-control form-control-alternative"
                                                    value="" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="/js/user.js"></script>
